<style>
  .verify {
    text-align: center;
    font-family: Arial, sans-serif;
  }
  .text {
    display: inline-block;
    margin: 10px 0;
    font-size: 24px;
    line-height: 1.5;
  }
  .logo {
    border-bottom: 1px solid gray;
    padding-bottom: 25px;
  }
  .link a {
    color: white;
    padding: 10px 35px;
    background-color: #1890ff;
    border: 1px solid transparent;
    border-radius: 5px;
    transition: .3s;
    text-decoration: none;
    display: inline-block;
  }
</style>
<table class="verify">
  <tr class="verify__item">
    <td class="logo">
      <a href="{{clientLink}}" target='_blank'>
        <img alt="Chattik" src="data:image/png;base64," />
      </a>
    </td>
  </tr>
  <tr class="verify__item">
    <td class="text">
      {{ text }}
    </td>
  </tr>
  <tr class="verify__item">
    <td class="link">
      <a href="{{ link }}" target='_blank'>{{ linkText }}</a>
    </td>
  </tr>
</table>